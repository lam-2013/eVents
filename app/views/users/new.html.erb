<% #Provide the page title in a symbol to application.html.erb to avoid duplication %>
<% provide :title, 'Sign up' %>

<div id="contenuto">

  <h1>Registrati</h1>
  <h2>Inserisci i tuoi dati nei campi sottostanti:</h2>

  <div id="formcentrato">
    <p>Nome </p>
    <p><label><input type="text" name="nome" /></label></p>

    <p>Cognome </p>
    <p><label><input type="text" name="cognome" /></label></p>

    <p>Data di nascita (gg/mm/aaaa) </p>
    <p><label><input type="text" name="datanascita" /></label></p>

    <p>Citt√† </p>
    <p><label><input type="text" name="citta" /></label></p>

    <p>Sesso <label><input type="radio" name="sesso" value="M"/> M</label>
      <label><input type="radio" name="sesso" value="F"/> F</label></p>

    <p>E-Mail </p>
    <p><label><input type="text" name="mail" /></label></p>

    <p>Nickname </p>
    <p><label><input type="text" name="nickname" /></label></p>

    <p>Password </p>
    <p><label><input type="text" name="password" /></label></p>
