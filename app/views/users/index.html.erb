<% #Provide the page title in a symbol to application.html.erb to avoid duplication %>
<% provide :title, 'All Users' %>

<div id="contenuto">

<h1>Utenti di eVents <%= render 'users/search_form' %></h1>
<div>
<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
      <li>
        <%= gravatar_for user, size: 52 %>
        <%= link_to user.name, user %>
        <% if current_user.admin? && !current_user?(user) %>
            <% # since browsers cannot send DELETE request, Rails fakes them with javascript... %>
            | <%= link_to 'elimina', user, method: :delete, data: { confirm: 'Sei sicuro?' } %>
        <% end %>
      </li>
  <% end %>
</ul>

<%= will_paginate %>
</div>
</div>