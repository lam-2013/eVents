<% # linked to the create action in the Users_follow_locals controller %>
<%= form_for(current_user.users_follow_locals.build(followed_id: @local.id), remote: true) do |f| %>
    <% # the hidden field contains the information needed for following a user %>
    <div><%= f.hidden_field :followed_id %></div>
    <%= f.submit 'segui', class: 'pulsante' %>
<% end %>