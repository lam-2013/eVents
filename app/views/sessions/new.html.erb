<% #Provide the page title in a symbol to application.html.erb to avoid duplication %>
<% provide :title, 'Log In' %>

<h1>Accedi</h1>
<% #USER MESSAGE FOR ENTER THEIR NAME AND THEIR PASSWORD %>
      <div class="row">
        <div class="span6 offset3">
          <%= form_for(:session, url: sessions_path) do |f| %>

              <%= f.label :name %>
              <%= f.text_field :name %>

              <%= f.label :password %>
              <%= f.password_field :password %>

              <%= f.submit 'Log in', class: 'btn btn-large btn-primary' %>
          <% end %>

          <p>New user? <%= link_to 'Sign up now!', sign_up_path %></p>
        </div>
      </div>

