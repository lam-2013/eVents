<li>
  <span class="content"><%= post.content %></span>
  <span class="timestamp">
    Postato <%= time_ago_in_words(post.created_at) %> ago
  </span>
  <% if current_user?(post.user) %>
      | <%= link_to 'elimina', post, method: :delete, data: { confirm: 'Sei sicuro di voler eliminare il post?' },
                    title: post.content %>
  <% end %>
</li>